unit Unit2;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, CPort, System.JSON, System.IOUtils;

type
  TForm2 = class(TForm)
    ComPort1: TComPort;
    GroupBox1: TGroupBox;
    CheckBox1: TCheckBox;
    Label1: TLabel;
    Label2: TLabel;
    ListBox1: TListBox;
    Label3: TLabel;
    ListBox2: TListBox;
    ListBox3: TListBox;
    ListBox4: TListBox;
    Label4: TLabel;
    Label5: TLabel;
    Label6: TLabel;
    Label7: TLabel;
    Label8: TLabel;
    Edit1: TEdit;
    Edit2: TEdit;
    Edit3: TEdit;
    Label9: TLabel;
    Label10: TLabel;
    Label11: TLabel;
    Label12: TLabel;
    Edit4: TEdit;
    Button1: TButton;
    Edit5: TEdit;
    Label13: TLabel;
    ListBox5: TListBox;
    Label14: TLabel;
    procedure CheckBox1Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
      procedure YukleJSON;
  public
    { Public declarations }
  end;

var
  Form2: TForm2;
  port:string;

implementation

{$R *.dfm}

procedure TForm2.Button1Click(Sender: TObject);
var
  JSONString: string;
  JSONArray: TJSONArray;
  JSONObject: TJSONObject;
  FileName: string;
begin
  FileName := TPath.Combine(TPath.GetDocumentsPath, 'veriler.json');

  // JSON dosyasý varsa oku, yoksa yeni oluþtur
  if TFile.Exists(FileName) then
  begin
    JSONString := TFile.ReadAllText(FileName, TEncoding.UTF8);
    JSONArray := TJSONObject.ParseJSONValue(JSONString) as TJSONArray;
    if JSONArray = nil then
      JSONArray := TJSONArray.Create;
  end
  else
    JSONArray := TJSONArray.Create;

  // Yeni veri objesi oluþtur
  JSONObject := TJSONObject.Create;
  JSONObject.AddPair('ID', Edit1.Text);
  JSONObject.AddPair('isim_soyisim', Edit2.Text);
  JSONObject.AddPair('kisi', Edit3.Text);
  JSONObject.AddPair('ucret', Edit4.Text);

  // Dizinin sonuna ekle
  JSONArray.AddElement(JSONObject);

  // JSON dizisini dosyaya yaz
  TFile.WriteAllText(FileName, JSONArray.Format(2), TEncoding.UTF8);

  // ListBox'larý güncelle
  YukleJSON;

  ShowMessage('Veriler JSON dosyasýna eklendi.');
end;



procedure TForm2.CheckBox1Click(Sender: TObject);
begin
if checkbox1.checked then
begin
port:= edit5.text;
  ComPort1.Port := port;
  comport1.open();
  label1.Font.Color:= clgreen;
  label1.Caption:='Baðlandý';
end

else
begin
  comport1.close();
  label1.Font.color:=clred;
  label1.caption:='Baðlan';
end;

end;

procedure TForm2.FormCreate(Sender: TObject);
begin
  YukleJSON;
end;


procedure TForm2.YukleJSON;
var
  FileName: string;
  JSONString: string;
  JSONArray: TJSONArray;
  JSONObject: TJSONObject;
  i: Integer;
begin
  FileName := TPath.Combine(TPath.GetDocumentsPath, 'veriler.json');

  if not TFile.Exists(FileName) then
    Exit;

  JSONString := TFile.ReadAllText(FileName, TEncoding.UTF8);
  JSONArray := TJSONObject.ParseJSONValue(JSONString) as TJSONArray;
  if JSONArray = nil then
    Exit;

  // ListBox’larý temizle (istersen temizlemeyip sadece deðiþiklikleri ekleyebilirsin)
  ListBox1.Items.Clear;
  ListBox2.Items.Clear;
  ListBox3.Items.Clear;
  ListBox4.Items.Clear;

  for i := 0 to JSONArray.Count - 1 do
  begin
    JSONObject := JSONArray.Items[i] as TJSONObject;

    // Burada deðiþiklik kontrolü yapabilirsin, basit örnek: sadece ekleme
    ListBox1.Items.Add(JSONObject.GetValue('ID').Value);
    ListBox2.Items.Add(JSONObject.GetValue('isim_soyisim').Value);
    ListBox3.Items.Add(JSONObject.GetValue('kisi').Value);
    ListBox4.Items.Add(JSONObject.GetValue('ucret').Value);
  end;
end;


end.
