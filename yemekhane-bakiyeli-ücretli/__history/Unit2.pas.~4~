unit Unit2;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes,
  Vcl.Graphics, Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls,
  CPort, System.JSON, System.IOUtils, Unit1;

type
  TForm2 = class(TForm)
    ComPort1: TComPort;
    GroupBox1: TGroupBox;
    CheckBox1: TCheckBox;
    Label1: TLabel;
    Label2: TLabel;
    ListBox1: TListBox; // KART ID
    ListBox2: TListBox; // İSİM
    ListBox3: TListBox; // KİŞİ
    ListBox4: TListBox; // ÜCRET
    ListBox5: TListBox; // OKUTMA
    Edit1: TEdit;       // KART ID
    Edit2: TEdit;
    Edit3: TEdit;
    Edit4: TEdit;
    Edit5: TEdit;       // COM PORT
    Button1: TButton;
    Button2: TButton;
    procedure FormCreate(Sender: TObject);
    procedure CheckBox1Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure ComPort1RxChar(Sender: TObject; Count: Integer);
    procedure ButtonYenileClickClickClick(Sender: TObject);
  private
    procedure YukleJSON;
    procedure KartIsle(const KartID: string);
  public
  end;

var
  Form2: TForm2;

implementation

{$R *.dfm}

function JSONDosya: string;
begin
  Result := TPath.Combine(TPath.GetDocumentsPath, 'veriler.json');
end;

procedure TForm2.FormCreate(Sender: TObject);
begin
  YukleJSON;
end;

procedure TForm2.CheckBox1Click(Sender: TObject);
begin
  if CheckBox1.Checked then
  begin
    ComPort1.Port := Edit5.Text;
    ComPort1.BaudRate := br9600;
    ComPort1.Open;
    Label1.Caption := 'Bağlandı';
    Label1.Font.Color := clGreen;
  end
  else
  begin
    ComPort1.Close;
    Label1.Caption := 'Bağlı Değil';
    Label1.Font.Color := clRed;
  end;
end;

procedure TForm2.Button1Click(Sender: TObject);
var
  Arr: TJSONArray;
  Obj: TJSONObject;
  NewID: Integer;
begin
  if TFile.Exists(JSONDosya) then
    Arr := TJSONObject.ParseJSONValue(
      TFile.ReadAllText(JSONDosya, TEncoding.UTF8)
    ) as TJSONArray
  else
    Arr := TJSONArray.Create;

  if Arr = nil then
    Arr := TJSONArray.Create;

  // 🔥 OTOMATİK ID
  NewID := Arr.Count + 1;

  Obj := TJSONObject.Create;
  Obj.AddPair('ID', TJSONNumber.Create(NewID)); // ✅ ID EKLENDİ
  Obj.AddPair('kart_id', Edit1.Text);
  Obj.AddPair('isim_soyisim', Edit2.Text);
  Obj.AddPair('kisi', Edit3.Text);
  Obj.AddPair('ucret', Edit4.Text);
  Obj.AddPair('okutma_miktari', TJSONNumber.Create(0));

  Arr.AddElement(Obj);

  TFile.WriteAllText(JSONDosya, Arr.Format(2), TEncoding.UTF8);
  Arr.Free;

  YukleJSON;
end;




procedure TForm2.ButtonYenileClickClickClick(Sender: TObject);
begin
     YukleJSON;
end;

procedure TForm2.Button2Click(Sender: TObject);
begin
  if not Assigned(Form1) then
    Form1 := TForm1.Create(Application);
  Form1.Show;
end;

procedure TForm2.YukleJSON;
var
  Arr: TJSONArray;
  Obj: TJSONObject;
  i: Integer;
begin
  ListBox1.Clear;
  ListBox2.Clear;
  ListBox3.Clear;
  ListBox4.Clear;
  ListBox5.Clear;

  if not TFile.Exists(JSONDosya) then Exit;

  Arr := TJSONObject.ParseJSONValue(
    TFile.ReadAllText(JSONDosya, TEncoding.UTF8)
  ) as TJSONArray;

  if Arr = nil then Exit;

  for i := 0 to Arr.Count - 1 do
  begin
    Obj := Arr.Items[i] as TJSONObject;

    ListBox1.Items.Add(IntToStr(i+1) + '. ' + Obj.GetValue('kart_id').Value);
    ListBox2.Items.Add(Obj.GetValue('isim_soyisim').Value);
    ListBox3.Items.Add(Obj.GetValue('kisi').Value);
    ListBox4.Items.Add(Obj.GetValue('ucret').Value);
    ListBox5.Items.Add(Obj.GetValue('okutma_miktari').Value);
  end;

  Arr.Free;
end;

procedure TForm2.ComPort1RxChar(Sender: TObject; Count: Integer);
var
  S: string;
begin
  SetLength(S, Count);
  ComPort1.ReadStr(S, Count);
  S := Trim(S);

  if S = '' then Exit;

  Edit1.Text := S;
  KartIsle(S);
end;

procedure TForm2.KartIsle(const KartID: string);
var
  Arr: TJSONArray;
  Obj: TJSONObject;
  i, Sayac: Integer;
  Bulundu: Boolean;
  JsonText: string;
begin
  Bulundu := False;

  if not TFile.Exists(JSONDosya) then Exit;

  JsonText := TFile.ReadAllText(JSONDosya, TEncoding.UTF8);
  Arr := TJSONObject.ParseJSONValue(JsonText) as TJSONArray;
  if Arr = nil then Exit;

  for i := 0 to Arr.Count - 1 do
  begin
    Obj := Arr.Items[i] as TJSONObject;

    if Obj.GetValue('kart_id').Value = KartID then
    begin
      Sayac := Obj.GetValue<Integer>('okutma_miktari', 0);
      Obj.RemovePair('okutma_miktari');
      Obj.AddPair('okutma_miktari', TJSONNumber.Create(Sayac + 1));
      Bulundu := True;
      Break;
    end;
  end;

  TFile.WriteAllText(JSONDosya, Arr.Format(2), TEncoding.UTF8);
  Arr.Free;

  if Bulundu then
    ComPort1.WriteStr('ONAY'#10)
  else
    ComPort1.WriteStr('HATA'#10);

  YukleJSON;
end;

end.

